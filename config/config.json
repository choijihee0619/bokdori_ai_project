{
"llm": {
    "provider": "openai",
    "model_name": "gpt-3.5-turbo",
    "temperature": 0.7,
    "max_tokens": 1000
},
"embedding": {
    "provider": "openai",
    "model_name": "text-embedding-ada-002"
},
"rag": {
    "chroma_persist_directory": "./data/embeddings",
    "chroma_collection_name": "bokdori_knowledge",
    "chunk_size": 1000,
    "chunk_overlap": 200,
    "top_k": 3,
    "use_compression": false
},
"phishing_detection": {
    "threshold": 0.7,
    "log_detections": true
},
"emotion_analysis": {
    "enabled": true,
    "depression_alert_threshold": 0.6,
    "depression_alert_days": 7,
    "log_emotions": true
},
"data_export": {
    "auto_weekly_report": true,
    "default_format": "json",
    "export_directory": "./data/exports"
},
"language": "ko",
"show_sources": false,
"debug": false
}